<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nfnt.libraryfragment.HomePage"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/closesmile"/>

        <Button
            android:layout_gravity="bottom|center"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:background="@drawable/frown"
            android:textColor="#ffffff"
            android:onClick="clickMasuk"
            android:text="Cerita nabi Dan Rosul"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="100dp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300px"
            android:layout_height="300px"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/frown"
            android:layout_marginTop="70dp"/>
    </FrameLayout>
</RelativeLayout>